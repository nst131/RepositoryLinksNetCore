<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LinkUI</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/modal.css" />
</head>
<body>
    <div class="container mt-4">
        @RenderBody()
    </div>

    <div id="create-modal" class="modal hidden">
        <div class="modal-content">
            <button id="close-modal" class="close-btn">×</button>
            <form id="create-form">
                <label for="original-url">Длинный URL</label>
                <input type="text" name="OriginalUrl" id="original-url" class="form-control mb-2" />
                <div id="url-error" class="error-message text-danger mb-2"></div>
                <button type="submit" class="btn btn-success">Создать</button>
            </form>
        </div>
    </div>

    <div id="update-modal" class="modal hidden">
        <div class="modal-content">
            <button id="close-update-modal" class="close-btn">×</button>
            <form id="update-form">
                <label for="update-url">Длинный URL</label>
                <input type="text" id="update-url" name="OriginalUrl" class="form-control mb-2" />
                <div id="update-error" class="error-message text-danger mb-2"></div>
                <button type="submit" class="btn btn-warning">Обновить</button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/createRow.js"></script>
    <script src="~/js/updateRow.js"></script>
    <script src="~/js/deleteRows.js"></script>
    <script src="~/js/magnifyCountOfTransitions.js"></script>
</body>
</html>
