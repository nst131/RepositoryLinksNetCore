@model IEnumerable<LinkUI.Models.TableWithUrlUI.Dto.OutTableWithUrlDtoUI>

<div class="container d-flex justify-content-center mt-5">
    <div class="w-100" style="max-width: 900px;">

        <button id="create-link-btn" class="btn btn-primary mb-3">Создать новую ссылку</button>

        <table class="table table-striped table-bordered text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Длинный URL</th>
                    <th>Короткий URL</th>
                    <th>Дата создания</th>
                    <th>Переходы</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody id="table-body">
                @foreach (var item in Model)
                {
                    <tr id="@item.Id">
                        <td>@item.OriginalUrl</td>
                        <td>
                            <a class="redirect-link" data-short="@item.ShortUrl" data-id="@item.Id">@item.ShortUrl</a>
                        </td>
                        <td>@item.CreatedAt</td>
                        <td id ="count-@item.Id">@item.CountRedirection</td>
                        <td>
                            <button class="btn btn-sm btn-danger delete-btn" data-id="@item.Id">delete</button>
                            <button class="btn btn-warning update-btn" data-id="@item.Id">update</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


